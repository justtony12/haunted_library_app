<h1>Sign Up Below:</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>There were some errors:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>
    
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>
    
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Sign Up" %>
<% end %>