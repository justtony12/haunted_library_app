<h3>Edit Post</h3>

<%= form_for @post do |f| %>
  <%= f.label 'Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Description' %><br>
  <%= f.text_area :description %><br>

  <%= f.label 'Author' %><br>
  <%= f.text_field :author %><br>

  <%= f.label 'Genre' %><br>
  <%= f.text_field :genre %><br>

  <%= f.label 'Content' %><br>
  <%= f.text_area :content %><br>

  <%= f.submit "Submit Post" %>
<% end %> 