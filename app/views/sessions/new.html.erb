<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :username, 'Username:' %>
  <%= f.text_field :username %>

  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>
  
  <%= f.submit "log in" %> Or 
  <%= link_to(controller: 'users', action: 'new') { 'sign up' } %><br><br>
<% end %>

<%= button_to 'Log in with Facebook!', '/auth/facebook', method: :post, class: 'btn btn-secondary' %>