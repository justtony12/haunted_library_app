<h2><%= @author.name %></h2>
<p><%= @author.bio %></p>

<ul>
    <% @author.posts.each do |post| %>
        <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
</ul>

<% if @author.user == current_user %>
    <%= button_to "Edit Author", edit_author_path(@author), method: :get %><br>
    <%= button_to "Delete Author", author_path(@author), method: :delete %>
<% end %>